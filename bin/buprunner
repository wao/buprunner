include BupRunner

Main do
    option 'config', 'c' do
        optional
        argument_required
        cast Pathname
        validate{ |p| p.exist? && p.file? }
    end

    def config_file 
        if params[:config].given?
            params[:config]
        else
            Pathname.new( "#{ENV['HOME']}/.buprunner.conf" )
        end
    end

    def parse_config
        @config = BackupConfig.load( config_file )
    end

    mode 'dump' do
        def run
            parse_config
            @config.targets.each do |t|
                puts "Target: %s" % t.name
                puts "  path: %s" % t.path
                puts
            end

            @config.repos.each do |r|
                puts "Repos: %s" % t.name
            end
        end
    end
end
